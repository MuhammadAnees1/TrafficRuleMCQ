<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2375" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.475" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7125" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.938" />

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/timeline2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline"
        app:layout_constraintStart_toEndOf="@id/dotView3"
        app:layout_constraintEnd_toStartOf="@id/dotView5"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_min="50dp" />

    <TextView
        android:id="@+id/dotView1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/timeline"
        android:gravity="center"
        android:text="01"
        app:layout_constraintStart_toStartOf="@id/verticalGuideline1"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline" />

    <TextView
        android:id="@+id/dotView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/timeline"
        android:gravity="center"
        android:text="02"
        app:layout_constraintStart_toStartOf="@id/verticalGuideline2"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline" />

    <TextView
        android:id="@+id/dotView3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/timeline"
        android:gravity="center"
        android:text="03"
        app:layout_constraintStart_toStartOf="@id/verticalGuideline3"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline" />

    <TextView
        android:id="@+id/dotView4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/timeline"
        android:gravity="center"
        android:text="04"
        app:layout_constraintStart_toStartOf="@id/verticalGuideline4"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline" />

    <TextView
        android:id="@+id/dotView5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/timeline"
        android:gravity="center"
        android:text="05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline" />
</androidx.constraintlayout.widget.ConstraintLayout>
